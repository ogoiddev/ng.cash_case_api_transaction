{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "es5",
      "es6",
      "ES2018"
    ],
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "*": ["node_modules/*"]
    },
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}