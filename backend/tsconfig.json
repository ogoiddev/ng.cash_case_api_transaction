{
  "compilerOptions": {
    "lib": [
        "es5",
        "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "*": ["node_modules/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true, 
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}